<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_front_grayA_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_grayA</item>
    </style>
    <!-- 横向的 1px的分割线 -->
    <style name="Divider_Horizontal_1px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_divider_gray</item>
    </style>
    <!-- 横向的 2px的分割线 -->
    <style name="Divider_Horizontal_2px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/color_divider_gray</item>
    </style>
</resources>
